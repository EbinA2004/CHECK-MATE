<web-app>
    <servlet>
        <servlet-name>AddTaskServlet</servlet-name>
        <servlet-class>AddTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTaskServlet</servlet-name>
        <url-pattern>/addTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListTaskServlet</servlet-name>
        <servlet-class>ListTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListTaskServlet</servlet-name>
        <url-pattern>/listTasks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditTaskServlet</servlet-name>
        <servlet-class>EditTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditTaskServlet</servlet-name>
        <url-pattern>/editTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateTaskServlet</servlet-name>
        <servlet-class>UpdateTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateTaskServlet</servlet-name>
        <url-pattern>/updateTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <servlet-class>DeleteTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <url-pattern>/deleteTask</url-pattern>
    </servlet-mapping>
</web-app>
